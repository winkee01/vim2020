# copy below settings into ~/.vim/coc-settings.json
# or ~/.config/nvim/coc-settings.json
# or execute :CocConfig in vim and add below settings

{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "rust": {
            "command": "rls",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        }
    }
}
